<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="scheduleDialog"
        title="Schedule">
        <content>
            <List id="scheduleList">
                <items>
                    <StandardListItem
                        title="{time}"
                        description="{status}"
                        type="Active"
                        press="onSlotPress" />
                </items>
            </List>
        </content>
        <beginButton>
            <Button text="Close" press="onCloseScheduleDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
